{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES6",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./src",
  },
  "include": [
    "src/**/*",
    "../client/src/services/socket.service.ts",
    "clean.js"
  ],
  "files": ["src/index.ts"],
  "exclude": ["node_modules", "dist"]
}
